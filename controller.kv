#:kivy 1.0

<Controller>:
    GridLayout:
        id: maingrid
        cols: 2
        padding: 1
        width:400
#        row_default_height: 40
#        row_force_default: True
        GridLayout:
            id: arrivals
            cols: 1
            HeaderButton:
                text: "Arrivals"
                background_color: 0,.5,0,1
            MyScrollView:
                size_hint_y: 10
                id: scroll_1

        GridLayout:
            cols: 1
            HeaderButton:
                text: "Departures"
                background_color: 1,.3,.3,1
            MyScrollView:
                size_hint_y: 10
                id: scroll_0

        GridLayout:
            cols: 1
            HeaderButton:
                text: "Scenic"
                background_color: .3,.3,1,1
            MyScrollView:
                size_hint_y: 10
                id: scroll_2

        GridLayout:
            cols: 1
            HeaderButton:
                text: "Other"
                background_color: .3,.3,1,1
            MyScrollView:
                size_hint_y: 10
                id: scroll_3

<HeaderButton@Button>:
    disabled: True
    size_hint_y: 1
    background_normal: ''
    disabled_color: 1, 1, 1, 1
    background_disabled_normal: self.background_normal


<FlightStrip@Button>:
    markup: True
    text_size: 500,110
    halign: "left"
    valign: "top"
    text: """[b]N422PE          HP/Paul                  1975[/b]\n7:36                 Empire 4950               20\nOps:22    Note note note note note """
    size_hint_y: None
    size_hint_x: 1
    height:150
#    on_press: root.parent.parent.parent.parent.do_action()
    on_press: root.do_click()
    background_color: 0,.5,0,1

<AddButton@Button>:
    markup: True
#    text_size: 500,150
    halign: "left"
    valign: "top"
    text: """add"""
    size_hint_y: None
    size_hint_x: 1
    height:50
    on_press: app.add_button(root.parent)
    background_color: 0,.5,0,1

<MyScrollView@ScrollView>:
    bar_width: 20
    id: sv
	GridLayout:
        id: grid
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        padding: 5
        spacing: 5
#        FlightStrip:
#            id: test
#        FlightStrip:
#            id: test2
        AddButton:
            id: add
